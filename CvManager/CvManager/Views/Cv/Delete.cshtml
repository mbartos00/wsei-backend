@model CvManager.Models.Applicant

@{
    ViewData["Title"] = "Usuń";
}



<div class="col-11 mx-auto pt-0 p0">
    <div class="card">
        <div class="card-header bg-info text-uppercase text-white d-flex justify-content-center align-items-center" style="height:45px">
            <h4>Usuń aplikanta</h4>
        </div>
        <form id="ApplicantForm" enctype="multipart/form-data" style="padding-inline:1rem; margin-top:.5rem" asp-action="Delete">
           
            <input type="hidden"  asp-for="Id"/>

            <div class="row">
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Imię i Nazwisko</label>
                        <input asp-for="Name" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Gender" class="control-label">Płeć</label>
                        <input asp-for="Gender" class="form-control" readonly/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Age" class="control-label">Wiek</label>
                        <input asp-for="Age" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Qualification" class="control-label">Zawód</label>
                        <input asp-for="Qualification" class="form-control" readonly/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="TotalExperience" class="control-label">Doświadczenie</label>
                        <input asp-for="TotalExperience" class="form-control"  readonly/>
                    </div>
                </div>

                <div class="col-md-6 btn-group">
                    <img src="~/images/@Model.PhotoUrl" class="img-fluid" width="125" height="125" style="margin-top:20px" />
                </div>

                <div class="col-md-12">
                    <table class="table table-striped table-sm" id="ExpTable">
                        <thead>
                            <tr>
                                <th>Nazwa firmy</th>
                                <th>Stanowisko</th>
                                <th>Przepracowanych lat</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Experiences.Count; i++)
                            {
                                <tr>
                                    <td>
                                        <input asp-for="@Model.Experiences[i].CompanyName" class="form-control-plaintext" readonly/>
                                    </td>
                                    <td>
                                        <input asp-for="@Model.Experiences[i].Designation" class="form-control-plaintext" readonly />
                                    </td>
                                    <td>
                                        <input asp-for="@Model.Experiences[i].YearsWorked" class="form-control-plaintext" readonly/>
                                    </td>
                                    <td>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="col-12 btn-group">
                    <div class="form-group col-6 text-right p-2">
                        <a asp-action="Index" class="btn btn-secondary">Wróć</a>
                    </div>
                    <div class="col-6 form-group text-left p-2">
                        <input type="submit" value="Usuń" class="btn btn-danger" />
                    </div>
                </div>
            </div>
            </form>
        </div>
    </div>






@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    
}
